#!/bin/bash

RUN_DIR=/var/vcap/sys/run/ibm_security
LOG_DIR=/var/vcap/sys/log/ibm_security
JOB_NAME=ibm_security
RUNAS=vcap

exec 1>> $LOG_DIR/$JOB_NAME.stdout.log
exec 2>> $LOG_DIR/$JOB_NAME.stderr.log

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R $RUNAS:$RUNAS $RUN_DIR $LOG_DIR

    ibm_security_bin="$(dirname $(readlink -e $0))"
    DONE_FILE=${RUN_DIR}/ibm_security.done
    if [ ! -f $DONE_FILE ]; then
       echo "`date` - Start to install IEM Agent ..."
       cd $ibm_security_bin/../packages/bm_security
       tar -zxvf *.tgz
       ./install_ibm_security.sh
       EXCODE=$?  
       if [ "${EXCODE}" != "0" ]; then
       	   echo "Failed to apply IBM security, exit code $EXCODE"
           exit $EXCODE
       fi

       touch $DONE_FILE
    fi
    ;;

  stop)
    echo "Do nothing"
    ;;

  *)
    echo "Usage: ibm_security_ctl {start|stop}" ;;

esac
exit 0
