#!/bin/bash

RUN_DIR=/var/vcap/sys/run/iem_agent
LOG_DIR=/var/vcap/sys/log/iem_agent
JOB_NAME=iem_agent
PIDFILE=${RUN_DIR}/iem_agent.pid
RUNAS=vcap

exec 1>> $LOG_DIR/$JOB_NAME.stdout.log
exec 2>> $LOG_DIR/$JOB_NAME.stderr.log

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R $RUNAS:$RUNAS $RUN_DIR $LOG_DIR

    iem_agent_bin="$(dirname $(readlink -e $0))"
    DONE_FILE=$iem_agent_bin/../iem_agent.done
    if [ ! -f $DONE_FILE ]; then
       echo "`date` - Start to install IEM Agent ..."
       cd $iem_agent_bin/../packages/iem_agent
       tar -zxvf *.tgz
       ./install_IEM.sh
       EXCODE=$?  
       if [ "${EXCODE}" != "0" ]; then
       	   echo "Failed to install IEM Agent, exit code $EXCODE"
           exit $EXCODE
       fi

       touch $DONE_FILE
    fi

    pid=`ps aux | grep -i BESClient | grep -v grep | awk {'print $2'}`
    if [[ ! $pid =~ ^-?[0-9]+$ ]]; then
        echo "Cannot detect a valid process ID for BESClient"
        exit 1
    fi

    echo $pid > $PIDFILE
    ;;

  stop)
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: iem_agent_ctl {start|stop}" ;;

esac
exit 0
